@model ProductDto

@{
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border  bg-white  p-3">
        <h2 class="text-center mb-5 ">Edit Product</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-from-label">ID</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@ViewData["ProductId"]" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-from-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Name" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-from-label">Brand</label>
             
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-from-label">Category</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="Category">
                        <option value="Entrada">Entrada</option>
                        <option value="FastFood">FastFood</option>
                        <option value="Mariscos">Mariscos</option>
                        <option value="Plato especial">Plato especial</option>
                        <option value="Salida Gourmet">Salida Gourmet</option>
                         <option value="Dessert">Dessert</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-from-label">Unid Price</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="UnidPrice" />
                    <span asp-validation-for="UnidPrice" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-from-label">Description</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="offset-sm-4 col-sm-4 d-grid">

                <img src="/img/@ViewData["ImageFileName"]" width="150" />
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-from-label">Imagen</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ImagenFileName" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-from-label">Created At</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@ViewData["CreateAt"]" />
                </div>
            </div>

            <div class="row ">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Sudmit</button>
                </div>

                <div class="offset-sm-4 col-sm-4 d-grid">

                    <button type="submit" class="btn btn-outline-primary" asp-controller="Products" asp-action="Index" role="button">Cancel</button>
                </div>

            </div>


        </form>

    </div>
</div>
