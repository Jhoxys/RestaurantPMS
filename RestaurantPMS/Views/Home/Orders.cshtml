<div class="row g-4">
    <!-- Panel Izquierdo -->
    <div class="col-md-8">
        <div class="card p-4">
            <h5 class="fw-bold mb-3"><i class="fas fa-cart-plus me-2"></i>Nuevo Pedido</h5>
            <p class="text-muted mb-4">Selecciona elementos del menú para crear un pedido</p>

            <!-- Selects -->
            <div class="row mb-4">
                <div class="col-md-6 mb-2">
                    <label class="form-label">Mesa</label>
                    <select class="form-select">
                        <option selected>Seleccionar mesa</option>
                        <option>Mesa 1</option>
                        <option>Mesa 2</option>
                        <option>Mesa 3</option>
                    </select>
                </div>
                <div class="col-md-6 mb-2">
                    <label class="form-label">Mesero</label>
                    <select class="form-select">
                        <option selected>Seleccionar mesero</option>
                        <option>Juan Pérez</option>
                        <option>María Gómez</option>
                        <option>Carlos Díaz</option>
                    </select>
                </div>
            </div>

            <!-- Productos -->
            <div class="row row-cols-1 row-cols-md-2 g-3">
                <!-- Producto 1 -->
                <div class="col">
                    <div class="menu-card">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h6 class="fw-bold mb-0">Hamburguesa Clásica</h6>
                            <span class="precio">$15.99</span>
                        </div>
                        <p class="text-muted small mb-1">Carne de res, lechuga, tomate, cebolla y queso</p>
                        <p class="text-muted small">Platos Principales</p>
                        <button class="btn btn-agregar"><i class="fas fa-plus me-1"></i>Agregar</button>
                    </div>
                </div>

                <!-- Producto 2 -->
                <div class="col">
                    <div class="menu-card">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h6 class="fw-bold mb-0">Pizza Margherita</h6>
                            <span class="precio">$18.50</span>
                        </div>
                        <p class="text-muted small mb-1">Salsa de tomate, mozzarella fresca y albahaca</p>
                        <p class="text-muted small">Pizzas</p>
                        <button class="btn btn-agregar"><i class="fas fa-plus me-1"></i>Agregar</button>
                    </div>
                </div>

                <!-- Producto 3 -->
                <div class="col">
                    <div class="menu-card">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h6 class="fw-bold mb-0">Ensalada César</h6>
                            <span class="precio">$12.99</span>
                        </div>
                        <p class="text-muted small mb-1">Lechuga romana, crutones, parmesano y aderezo césar</p>
                        <p class="text-muted small">Ensaladas</p>
                        <button class="btn btn-agregar btnMio"><i class="fas fa-plus me-1"></i>Agregar</button>
                    </div>
                </div>

                <!-- Producto 4 -->
                <div class="col">
                    <div class="menu-card">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h6 class="fw-bold mb-0">Coca Cola</h6>
                            <span class="precio">$3.50</span>
                        </div>
                        <p class="text-muted small mb-1">Refresco de cola 355ml</p>
                        <p class="text-muted small">Bebidas</p>
                        <button class="btn btn-agregar btnMio"><i class="fas fa-plus me-1"></i>Agregar</button>
                    </div>
                </div>

                <!-- Producto 5 -->
                <div class="col">
                    <div class="menu-card">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h6 class="fw-bold mb-0">Test Burger</h6>
                            <span class="precio">$19.99</span>
                        </div>
                        <p class="text-muted small mb-1">A test burger for API testing</p>
                        <p class="text-muted small">Platos Principales</p>
                        <button class="btn btn-agregar  btnMio"><i class="fas fa-plus me-1"></i>Agregar</button>
                    </div>
                </div>

                <!-- Producto 6 -->
                <div class="col">
                    <div class="menu-card">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h6 class="fw-bold mb-0">Test Burger</h6>
                            <span class="precio">$19.99</span>
                        </div>
                        <p class="text-muted small mb-1">A test burger for API testing</p>
                        <p class="text-muted small">Platos Principales</p>
                        <button class="btn btn-agregar "><i class="fas fa-plus me-1"></i>Agregar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Panel Derecho -->
    <!-- Pedido Actual -->
    <div class="col-lg-4">
        <div class="card p-4">
            <h6>Pedido Actual</h6>
            <hr>
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div>
                    <strong>Coca Cola</strong><br>
                    <small class="text-muted">$3.50 c/u</small>
                </div>
                <div class="input-group input-group-sm" style="width: 120px;">
                    <button class="btn btn-outline-secondary"><i class="fas fa-minus"></i></button>
                    <input type="text" class="form-control text-center" value="2" readonly>
                    <button class="btn btn-outline-secondary"><i class="fas fa-plus "></i></button>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <strong>Ensalada César</strong><br>
                    <small class="text-muted">$12.99 c/u</small>
                </div>
                <div class="input-group input-group-sm" style="width: 120px;">
                    <button class="btn btn-outline-secondary"><i class="fas fa-minus"></i></button>
                    <input type="text" class="form-control text-center " value="1" readonly>
                    <button class="btn btn-outline-secondary"><i class="fas fa-plus"></i></button>
                </div>
            </div>

            <hr>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <strong>Total:</strong>
                <strong class="text-warning">$19.99</strong>
            </div>
            <button class="btn btn-crear w-100">Crear Pedido</button>
        </div>
    </div>
</div>
