<div class="container-fluid">

    <div class="row">
        <!-- Listado -->
        <div class="col-lg-8">
            <div class="section-card">
                <h5 class="mb-3">Elementos del Menú</h5>

                <div class="row g-3">
                    <!-- Item -->
                    <div class="col-md-6">
                        <div class="menu-item card p-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <h6 class="title mb-1">Hamburguesa Clásica</h6>
                                <div class="price">$15.99</div>
                            </div>
                            <p class="text-muted mb-2">Carne de res, lechuga, tomate, cebolla y queso</p>
                            <div class="d-flex align-items-center gap-2">
                                <span class="pill-available">Disponible</span>
                                <span class="badge badge-category">Platos Principales</span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="menu-item card p-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <h6 class="title mb-1">Pizza Margherita</h6>
                                <div class="price">$18.50</div>
                            </div>
                            <p class="text-muted mb-2">Salsa de tomate, mozzarella fresca y albahaca</p>
                            <div class="d-flex align-items-center gap-2">
                                <span class="pill-available">Disponible</span>
                                <span class="badge badge-category">Pizzas</span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="menu-item card p-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <h6 class="title mb-1">Ensalada César</h6>
                                <div class="price">$12.99</div>
                            </div>
                            <p class="text-muted mb-2">Lechuga romana, crutones, parmesano y aderezo césar</p>
                            <div class="d-flex align-items-center gap-2">
                                <span class="pill-available">Disponible</span>
                                <span class="badge badge-category">Ensaladas</span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="menu-item card p-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <h6 class="title mb-1">Coca Cola</h6>
                                <div class="price">$3.50</div>
                            </div>
                            <p class="text-muted mb-2">Refresco de cola 355ml</p>
                            <div class="d-flex align-items-center gap-2">
                                <span class="pill-available">Disponible</span>
                                <span class="badge badge-category">Bebidas</span>
                            </div>
                        </div>
                    </div>

                    <!-- Duplicados de ejemplo -->
                    <div class="col-md-6">
                        <div class="menu-item card p-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <h6 class="title mb-1">Test Burger</h6>
                                <div class="price">$19.99</div>
                            </div>
                            <p class="text-muted mb-2">A test burger for API testing</p>
                            <div class="d-flex align-items-center gap-2">
                                <span class="pill-available">Disponible</span>
                                <span class="badge badge-category">Platos Principales</span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="menu-item card p-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <h6 class="title mb-1">Test Burger</h6>
                                <div class="price">$19.99</div>
                            </div>
                            <p class="text-muted mb-2">A test burger for API testing</p>
                            <div class="d-flex align-items-center gap-2">
                                <span class="pill-available">Disponible</span>
                                <span class="badge badge-category">Platos Principales</span>
                            </div>
                        </div>
                    </div>
                </div><!-- /row -->
            </div>
        </div>

        <!-- Formulario -->
        <div class="col-lg-4">
            <div class="section-card h-100">
                <h5 class="mb-3">Agregar Elemento</h5>
                <form>
                    <div class="mb-3">
                        <label class="form-label">Nombre *</label>
                        <input type="text" class="form-control" placeholder="Nombre del platillo" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Descripción</label>
                        <textarea class="form-control" rows="4" placeholder="Descripción del platillo"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Precio *</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="number" step="0.01" min="0" class="form-control" placeholder="0.00" required>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label class="form-label">Categoría *</label>
                        <select class="form-select" required>
                            <option value="">Seleccionar categoría</option>
                            <option>Platos Principales</option>
                            <option>Ensaladas</option>
                            <option>Pizzas</option>
                            <option>Bebidas</option>
                            <option>Postres</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-brand w-100">
                        <span class="me-2">+</span> Agregar al Menú
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
