<div class="container-fluid ">
    <div class="row g-4">
        <!-- Columna izquierda: Facturas -->
        <div class="col-lg-8">
            <div class="panel">
                <h6 class="mb-1">Facturas Generadas</h6>
                <div class="text-muted small mb-3">Historial de facturas y métodos de pago</div>

                <!-- Item de factura -->
                <div class="invoice-card p-3 mb-3">
                    <div class="d-flex align-items-start justify-content-between">
                        <div>
                            <div class="invoice-title">INV-20251007-0001</div>
                            <div class="text-muted small">Test Customer • 555-1234</div>
                            <div class="text-muted small">10/7/2025, 3:03:56 AM</div>
                        </div>
                        <div class="text-end">
                            <div class="invoice-amount">$37.10</div>
                            <div class="text-muted small">IVA: $5.12</div>
                            <div class="mt-2">
                                <span class="pill"><i class="bi bi-wallet2"></i> efectivo</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Puedes duplicar .invoice-card para más registros -->
            </div>
        </div>

        <!-- Columna derecha: Stats + Form -->
        <div class="col-lg-4">
            <!-- Stats -->
            <div class="panel mb-4">
                <h6 class="mb-3">Estadísticas de Facturación</h6>
                <div class="d-grid gap-3">
                    <div class="stat success">
                        <div class="value">$0.00</div>
                        <div class="text-muted small">Ingresos del día</div>
                    </div>
                    <div class="stat primary">
                        <div class="value">0</div>
                        <div class="text-muted small">Facturas generadas</div>
                    </div>
                    <div class="stat lav">
                        <div class="value">$0.00</div>
                        <div class="text-muted small">IVA recaudado</div>
                    </div>
                </div>
            </div>

            <!-- Formulario -->
            <div class="panel">
                <h6 class="mb-3">Facturar Pedido</h6>
                <form>
                    <div class="mb-3">
                        <label class="form-label">Pedido a Facturar</label>
                        <select class="form-select">
                            <option selected>Seleccionar pedido</option>
                            <option value="1">Mesa 1 • $37.10</option>
                            <option value="2">Mesa 5 • $22.40</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Cliente (Opcional)</label>
                        <input type="text" class="form-control" placeholder="Nombre del cliente">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Teléfono (Opcional)</label>
                        <input type="tel" class="form-control" placeholder="Teléfono">
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Método de Pago</label>
                        <select class="form-select">
                            <option>Efectivo</option>
                            <option>Tarjeta</option>
                            <option>Transferencia</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-mint w-100">
                        <i class="bi bi-receipt-cutoff me-2"></i> Generar Factura
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>